---
import Logo from './Logo.astro';
import { Phone, Menu, X } from 'lucide-astro';
import { company } from '../content/config';

// Ensure base always ends with a slash
const baseUrl = import.meta.env.BASE_URL;
const base = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;

const navItems = [
  { href: base, label: 'Home', exact: true },
  { href: `${base}leistungen`, label: 'Leistungen', exact: false },
  { href: `${base}kontakt`, label: 'Kontakt', exact: true },
];

const currentPath = Astro.url.pathname;

// Helper function to check if nav item is active
function isActive(item: { href: string; exact: boolean }) {
  if (item.exact) {
    // For exact match, compare normalized paths
    const normalizedCurrent = currentPath.endsWith('/') ? currentPath : `${currentPath}/`;
    const normalizedHref = item.href.endsWith('/') ? item.href : `${item.href}/`;
    return normalizedCurrent === normalizedHref;
  }
  // For non-exact (like Leistungen), check if path starts with href
  return currentPath.startsWith(item.href) && currentPath !== base;
}
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href={base} class="flex items-center gap-3 group">
        <Logo class="text-primary transition-transform group-hover:scale-105" width="48" height="48" />
        <div class="hidden sm:block">
          <span class="text-xl font-bold text-dark font-serif tracking-wide">{company.shortName} GmbH</span>
          <span class="block text-xs text-dark-400">{company.tagline}</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`text-sm font-medium transition-colors hover:text-primary ${
              isActive(item)
                ? 'text-primary'
                : 'text-dark-500'
            }`}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- CTA Button & Mobile Menu -->
      <div class="flex items-center gap-4">
        <a
          href="tel:+4921584058777"
          class="inline-flex items-center gap-2 bg-primary hover:bg-primary-700 text-white px-4 py-2.5 rounded-lg font-semibold text-sm transition-all hover:shadow-lg hover:shadow-primary/25"
        >
          <Phone class="w-4 h-4" />
          <span class="hidden sm:inline">Notfall: 02158 / 40 58 777</span>
          <span class="sm:hidden">Anrufen</span>
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-dark-600 hover:text-primary transition-colors"
          aria-label="Menü öffnen"
        >
          <Menu class="w-6 h-6" id="menu-icon" />
          <X class="w-6 h-6 hidden" id="close-icon" />
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100">
    <nav class="max-w-7xl mx-auto px-4 py-4 space-y-2">
      {navItems.map((item) => (
        <a
          href={item.href}
          class={`block px-4 py-3 rounded-lg text-sm font-medium transition-colors ${
            isActive(item)
              ? 'bg-primary/10 text-primary'
              : 'text-dark-500 hover:bg-gray-50'
          }`}
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
