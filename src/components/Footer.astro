---
import Logo from './Logo.astro';
import { Phone, Mail, MapPin, Clock } from 'lucide-astro';

// Ensure base always ends with a slash
const baseUrl = import.meta.env.BASE_URL;
const base = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;
---

<footer class="bg-dark-950 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Unternehmen -->
      <div>
        <a href={base} class="flex items-center gap-3 mb-6">
          <Logo class="text-primary" width="40" height="40" />
          <span class="text-lg font-bold font-serif">INGENSIEP & SCHALLENBERG GmbH</span>
        </a>
        <p class="text-dark-300 text-sm leading-relaxed">
          Fachbetrieb für Sicherheit und Umweltschutz rund um Ihren Tank. Tankreinigung, Tanksanierung und Tankdemontage im Großraum Krefeld.
        </p>
      </div>

      <!-- Leistungen -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-6">Leistungen</h3>
        <ul class="space-y-3">
          <li><a href={`${base}leistungen/tankreinigung`} class="text-dark-300 hover:text-primary transition-colors text-sm">Tankreinigung</a></li>
          <li><a href={`${base}leistungen/tanksanierung`} class="text-dark-300 hover:text-primary transition-colors text-sm">Tanksanierung</a></li>
          <li><a href={`${base}leistungen/tankdemontage`} class="text-dark-300 hover:text-primary transition-colors text-sm">Tankdemontage</a></li>
          <li><a href={`${base}leistungen/tankstilllegung`} class="text-dark-300 hover:text-primary transition-colors text-sm">Tankstilllegung</a></li>
          <li><a href={`${base}leistungen/tankneubau`} class="text-dark-300 hover:text-primary transition-colors text-sm">Tankneubau</a></li>
          <li><a href={`${base}leistungen/lag-wartung`} class="text-dark-300 hover:text-primary transition-colors text-sm">LAG-Wartung</a></li>
        </ul>
      </div>

      <!-- Kontakt -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-6">Kontakt</h3>
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <MapPin class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" />
            <span class="text-dark-300 text-sm">
              Ingensiep & Schallenberg GmbH<br />
              Industriestr. 2a<br />
              47929 Grefrath
            </span>
          </li>
          <li class="flex items-start gap-3">
            <Phone class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" />
            <div class="text-sm">
              <a href="tel:+4921584058777" class="text-dark-300 hover:text-primary transition-colors block">02158 / 40 58 777</a>
              <a href="tel:+4921517903706" class="text-dark-400 hover:text-primary transition-colors block text-xs">02151 / 79 03 706 (Krefeld)</a>
              <a href="tel:+4921669293930" class="text-dark-400 hover:text-primary transition-colors block text-xs">02166 / 92 93 930 (Mönchengladbach)</a>
            </div>
          </li>
          <li class="flex items-center gap-3">
            <Mail class="w-5 h-5 text-primary flex-shrink-0" />
            <a href="mailto:info@is-tankschutz.de" class="text-dark-300 hover:text-primary transition-colors text-sm">info@is-tankschutz.de</a>
          </li>
        </ul>
      </div>

      <!-- Öffnungszeiten -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider mb-6">Erreichbarkeit</h3>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <Clock class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" />
            <div class="text-dark-300 text-sm">
              <p class="font-medium text-white">Mo - Do: 9:00 - 15:00</p>
              <p class="font-medium text-white">Fr: 9:00 - 13:30</p>
              <p class="mt-1">Notdienst 24/7 erreichbar</p>
            </div>
          </li>
        </ul>
        <div class="mt-6 p-4 bg-primary/10 rounded-lg border border-primary/20">
          <p class="text-sm text-primary font-medium">Notfall-Hotline</p>
          <a href="tel:+4921584058777" class="text-lg font-bold text-white hover:text-primary transition-colors">02158 / 40 58 777</a>
        </div>
      </div>
    </div>

    <!-- Einzugsgebiet -->
    <div class="mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-dark-800">
      <p class="text-dark-400 text-xs sm:text-sm text-center leading-relaxed">
        <span class="font-medium text-dark-300 block sm:inline mb-1 sm:mb-0">Unser Einzugsgebiet:</span> Grefrath, Krefeld, Düsseldorf, Duisburg, Mönchengladbach, Neuss, Moers, Viersen, Kempen, Willich, Tönisvorst und Umgebung (100 km Radius)
      </p>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-dark-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-dark-400 text-sm">
          © {new Date().getFullYear()} Ingensiep & Schallenberg. Alle Rechte vorbehalten.
        </p>
        <div class="flex items-center gap-6">
          <a href={`${base}impressum`} class="text-dark-400 hover:text-primary transition-colors text-sm">Impressum</a>
          <a href={`${base}datenschutz`} class="text-dark-400 hover:text-primary transition-colors text-sm">Datenschutz</a>
          <button
            type="button"
            data-cookie-settings
            class="text-dark-400 hover:text-primary transition-colors text-sm cursor-pointer"
          >
            Cookie-Einstellungen
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>
