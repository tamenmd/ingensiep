---
import Layout from '../layouts/Layout.astro';
import GoogleReviews from '../components/GoogleReviews.astro';
import {
  Shield,
  Award,
  Clock,
  MapPin,
  Phone,
  ArrowRight,
  Droplets,
  Wrench,
  Trash2,
  PauseCircle,
  PlusCircle,
  Settings,
  CheckCircle,
  Users,
  Calendar
} from 'lucide-astro';

// Ensure base always ends with a slash
const baseUrl = import.meta.env.BASE_URL;
const base = baseUrl.endsWith('/') ? baseUrl : `${baseUrl}/`;

const services = [
  {
    icon: Droplets,
    title: 'Tankreinigung',
    description: 'Professionelle Reinigung Ihrer Heizöltanks mit modernster Absaugtechnik für maximale Sicherheit.',
    href: `${base}leistungen/tankreinigung`
  },
  {
    icon: Wrench,
    title: 'Tanksanierung',
    description: 'Fachgerechte Innenbeschichtung und Sanierung beschädigter Tankanlagen nach WHG-Vorgaben.',
    href: `${base}leistungen/tanksanierung`
  },
  {
    icon: Trash2,
    title: 'Tankdemontage',
    description: 'Sichere Demontage und umweltgerechte Entsorgung alter Öltanks durch zertifizierte Fachkräfte.',
    href: `${base}leistungen/tankdemontage`
  },
  {
    icon: PauseCircle,
    title: 'Tankstilllegung',
    description: 'Ordnungsgemäße Stilllegung nicht mehr benötigter Tankanlagen nach behördlichen Vorschriften.',
    href: `${base}leistungen/tankstilllegung`
  },
  {
    icon: PlusCircle,
    title: 'Tankneubau',
    description: 'Planung und Installation neuer Tankanlagen mit modernster Technik und maximaler Effizienz.',
    href: `${base}leistungen/tankneubau`
  },
  {
    icon: Settings,
    title: 'LAG-Wartung',
    description: 'Regelmäßige Wartung und Prüfung Ihrer Leckschutzauskleidung für dauerhaften Schutz.',
    href: `${base}leistungen/lag-wartung`
  }
];

const trustSignals = [
  {
    icon: Shield,
    title: 'WHG-Zertifiziert',
    description: 'Fachbetrieb nach §62 AwSV'
  },
  {
    icon: Award,
    title: '20+ Jahre Erfahrung',
    description: 'Kompetenz aus Tradition'
  },
  {
    icon: Clock,
    title: '24/7 Notdienst',
    description: 'Immer für Sie da'
  },
  {
    icon: MapPin,
    title: '100 km Radius',
    description: 'Grefrath & Umgebung'
  }
];

const regions = [
  'Grefrath', 'Krefeld', 'Düsseldorf', 'Duisburg', 'Mönchengladbach', 'Neuss',
  'Moers', 'Viersen', 'Kempen', 'Willich', 'Tönisvorst', 'Kaarst',
  'Meerbusch', 'Ratingen', 'Oberhausen', 'Essen'
];

const googleMapsEmbed = 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2492.7730777411175!2d6.344890476895478!3d51.33369242106498!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47b8ba82845bac75%3A0xb88cb07f9e0ae3a3!2sIngensiep%20%26%20Schallenberg%20GmbH!5e0!3m2!1sde!2sde!4v1749747583498!5m2!1sde!2sde';
---

<Layout
  title="Ingensiep & Schallenberg | Tankreinigung & Tanksanierung in Grefrath und Umgebung"
  description="Ihr zertifizierter Fachbetrieb für Tankreinigung, Tanksanierung und Tankdemontage im Großraum Grefrath, Krefeld, Mönchengladbach. 20+ Jahre Erfahrung, WHG-zertifiziert, 24/7 Notdienst."
  keywords="Tankreinigung Grefrath, Tanksanierung Krefeld, Tankdemontage Mönchengladbach, Heizöltank reinigen, Öltank entsorgen, WHG Fachbetrieb"
>
  <!-- Hero Section -->
  <section class="relative min-h-[90vh] flex items-center bg-gradient-to-br from-dark-950 via-dark-900 to-dark-950 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url(&quot;data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E&quot;);"></div>
    </div>

    <!-- Hero Image Overlay (Placeholder) -->
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1504328345606-18bbc8c9d7d1?w=1920&q=80')] bg-cover bg-center opacity-20"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center gap-2 bg-primary/20 text-primary px-4 py-2 rounded-full text-sm font-medium mb-6">
            <Shield class="w-4 h-4" />
            WHG-zertifizierter Fachbetrieb
          </div>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white leading-tight mb-6">
            Professioneller
            <span class="text-primary"> Tankschutz</span>
            für Ihre Sicherheit
          </h1>

          <p class="text-lg text-dark-300 mb-8 max-w-xl">
            Ihr Spezialist für Tankreinigung, Tanksanierung und Tankdemontage im Großraum Grefrath, Krefeld und Mönchengladbach.
            Mit über 20 Jahren Erfahrung garantieren wir höchste Qualität und absolute Zuverlässigkeit.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 mb-12">
            <a
              href={`${base}kontakt`}
              class="inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-xl hover:shadow-primary/25 hover:-translate-y-0.5"
            >
              Angebot anfordern
              <ArrowRight class="w-5 h-5" />
            </a>
            <a
              href="tel:+4921584058777"
              class="inline-flex items-center justify-center gap-2 bg-white/10 hover:bg-white/20 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all border border-white/20"
            >
              <Phone class="w-5 h-5" />
              02158 / 40 58 777
            </a>
          </div>

          <!-- Trust Badges -->
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            {trustSignals.map((signal) => (
              <div class="text-center">
                <signal.icon class="w-8 h-8 text-primary mx-auto mb-2" />
                <p class="text-white font-semibold text-sm">{signal.title}</p>
                <p class="text-dark-400 text-xs">{signal.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Hero Image/Card -->
        <div class="hidden lg:block">
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
            <h3 class="text-white font-bold text-xl mb-6">Schnellanfrage</h3>
            <form class="space-y-4">
              <input
                type="text"
                placeholder="Ihr Name"
                required
                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-dark-400 focus:outline-none focus:border-primary transition-colors"
              />
              <input
                type="tel"
                placeholder="Telefonnummer"
                required
                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-dark-400 focus:outline-none focus:border-primary transition-colors"
              />
              <select class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-dark-400 focus:outline-none focus:border-primary transition-colors">
                <option value="">Leistung wählen</option>
                <option value="tankreinigung">Tankreinigung</option>
                <option value="tanksanierung">Tanksanierung</option>
                <option value="tankdemontage">Tankdemontage</option>
                <option value="tankstilllegung">Tankstilllegung</option>
                <option value="tankneubau">Tankneubau</option>
                <option value="lag-wartung">LAG-Wartung</option>
              </select>
              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="privacy-hero"
                  name="privacy"
                  required
                  class="mt-1 w-4 h-4 text-primary border-white/20 rounded focus:ring-primary bg-white/10"
                />
                <label for="privacy-hero" class="text-xs text-dark-300">
                  <span class="font-medium">DSGVO-Einverständnis:</span> Ich habe die <a href={`${base}datenschutz`} class="text-primary hover:underline">Datenschutzerklärung</a> gelesen und bin einverstanden. *
                </label>
              </div>
              <button
                type="submit"
                class="w-full bg-primary hover:bg-primary-700 text-white px-6 py-4 rounded-lg font-semibold transition-all hover:shadow-lg"
              >
                Rückruf anfordern
              </button>
            </form>
            <p class="text-dark-400 text-xs mt-4 text-center">
              Wir melden uns innerhalb von 24 Stunden bei Ihnen.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-white/30 rounded-full flex items-start justify-center p-2">
        <div class="w-1 h-2 bg-white/50 rounded-full"></div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 lg:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-primary font-semibold text-sm uppercase tracking-wider">Unsere Leistungen</span>
        <h2 class="text-3xl sm:text-4xl font-bold text-dark mt-4 mb-6">
          Komplettservice rund um Ihre Tankanlage
        </h2>
        <p class="text-dark-500 text-lg">
          Von der Reinigung über die Sanierung bis zur fachgerechten Entsorgung –
          wir bieten Ihnen alle Dienstleistungen aus einer Hand.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service) => (
          <a
            href={service.href}
            class="group bg-gray-50 hover:bg-white rounded-2xl p-8 transition-all hover:shadow-xl hover:shadow-gray-200/50 hover:-translate-y-1 border border-transparent hover:border-gray-100"
          >
            <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
              <service.icon class="w-7 h-7 text-primary group-hover:text-white transition-colors" />
            </div>
            <h3 class="text-xl font-bold text-dark mb-3 group-hover:text-primary transition-colors">
              {service.title}
            </h3>
            <p class="text-dark-500 mb-4">
              {service.description}
            </p>
            <span class="inline-flex items-center gap-2 text-primary font-semibold text-sm group-hover:gap-3 transition-all">
              Mehr erfahren
              <ArrowRight class="w-4 h-4" />
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 lg:py-32 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="text-primary font-semibold text-sm uppercase tracking-wider">Warum IS-Tankschutz?</span>
          <h2 class="text-3xl sm:text-4xl font-bold text-dark mt-4 mb-6">
            Ihr zuverlässiger Partner für Tankanlagen
          </h2>
          <p class="text-dark-500 text-lg mb-8">
            Als zertifizierter Fachbetrieb nach WHG garantieren wir höchste Standards
            bei allen Arbeiten an Ihrer Tankanlage. Vertrauen Sie auf unsere Expertise
            und profitieren Sie von einem Rundum-Service.
          </p>

          <ul class="space-y-4">
            <li class="flex items-start gap-4">
              <CheckCircle class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" />
              <div>
                <h4 class="font-semibold text-dark">Zertifizierte Qualität</h4>
                <p class="text-dark-500 text-sm">Fachbetrieb nach §62 AwSV mit TÜV-geprüften Verfahren</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <CheckCircle class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" />
              <div>
                <h4 class="font-semibold text-dark">Schnelle Reaktionszeit</h4>
                <p class="text-dark-500 text-sm">24/7 Notdienst für dringende Einsätze im gesamten Einzugsgebiet</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <CheckCircle class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" />
              <div>
                <h4 class="font-semibold text-dark">Transparente Preise</h4>
                <p class="text-dark-500 text-sm">Faire Festpreise ohne versteckte Kosten – Sie wissen vorher, was Sie zahlen</p>
              </div>
            </li>
            <li class="flex items-start gap-4">
              <CheckCircle class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" />
              <div>
                <h4 class="font-semibold text-dark">Umweltgerechte Entsorgung</h4>
                <p class="text-dark-500 text-sm">Zertifizierte Entsorgung aller Rückstände nach aktuellen Umweltvorschriften</p>
              </div>
            </li>
          </ul>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 gap-3 sm:gap-6">
          <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-8 text-center shadow-sm">
            <div class="text-2xl sm:text-4xl font-extrabold text-primary mb-1 sm:mb-2">20+</div>
            <p class="text-dark-500 text-xs sm:text-base">Jahre Erfahrung</p>
          </div>
          <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-8 text-center shadow-sm">
            <div class="text-2xl sm:text-4xl font-extrabold text-primary mb-1 sm:mb-2">5.000+</div>
            <p class="text-dark-500 text-xs sm:text-base">Zufriedene Kunden</p>
          </div>
          <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-8 text-center shadow-sm">
            <div class="text-2xl sm:text-4xl font-extrabold text-primary mb-1 sm:mb-2">100km</div>
            <p class="text-dark-500 text-xs sm:text-base">Einzugsgebiet</p>
          </div>
          <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-8 text-center shadow-sm">
            <div class="text-2xl sm:text-4xl font-extrabold text-primary mb-1 sm:mb-2">24/7</div>
            <p class="text-dark-500 text-xs sm:text-base">Notdienst</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Region Section -->
  <section class="py-20 lg:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <span class="text-primary font-semibold text-sm uppercase tracking-wider">Einzugsgebiet</span>
        <h2 class="text-3xl sm:text-4xl font-bold text-dark mt-4 mb-6">
          Wir sind in Ihrer Nähe
        </h2>
        <p class="text-dark-500 text-lg">
          Von Grefrath aus bedienen wir den gesamten Großraum Niederrhein und das Ruhrgebiet.
          Schnell, zuverlässig und zu fairen Konditionen.
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-3 mb-12">
        {regions.map((region) => (
          <span class="px-4 py-2 bg-gray-100 hover:bg-primary hover:text-white rounded-full text-sm font-medium text-dark-600 transition-colors cursor-default">
            {region}
          </span>
        ))}
      </div>

      <!-- Google Maps Embed -->
      <div class="rounded-2xl overflow-hidden shadow-lg">
        <iframe
          src={googleMapsEmbed}
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Standort Ingensiep & Schallenberg GmbH"
          class="w-full"
        ></iframe>
      </div>
    </div>
  </section>

  <!-- Google Reviews Section -->
  <GoogleReviews />

  <!-- CTA Section -->
  <section class="py-20 lg:py-32 bg-primary">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Bereit für professionellen Tankschutz?
      </h2>
      <p class="text-white/80 text-lg mb-10 max-w-2xl mx-auto">
        Kontaktieren Sie uns noch heute für ein unverbindliches Angebot.
        Unsere Experten beraten Sie gerne zu allen Fragen rund um Ihre Tankanlage.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`${base}kontakt`}
          class="inline-flex items-center justify-center gap-2 bg-white hover:bg-gray-100 text-primary px-8 py-4 rounded-lg font-semibold text-lg transition-all hover:shadow-xl"
        >
          Jetzt Angebot anfordern
          <ArrowRight class="w-5 h-5" />
        </a>
        <a
          href="tel:+4921584058777"
          class="inline-flex items-center justify-center gap-2 bg-transparent hover:bg-white/10 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all border-2 border-white"
        >
          <Phone class="w-5 h-5" />
          02158 / 40 58 777
        </a>
      </div>
    </div>
  </section>
</Layout>
